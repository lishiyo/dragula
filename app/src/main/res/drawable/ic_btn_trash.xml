<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item
		android:id="@+id/open"
		android:drawable="@drawable/ic_btn_trash_open"
		android:state_selected="true"/>

	<item
		android:id="@+id/close"
		android:drawable="@drawable/ic_btn_trash_closed"/>

	<transition
		android:drawable="@drawable/ic_btn_trash_close_to_open"
		android:fromId="@id/close"
		android:toId="@id/open"/>

	<transition
		android:drawable="@drawable/ic_btn_trash_open_to_close"
		android:fromId="@id/open"
		android:toId="@id/close"/>

</animated-selector>
